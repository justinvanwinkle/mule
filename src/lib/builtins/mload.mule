REQUIRE("SB-MD5")

def mload(fn, cache=True):
    if PROBE_FILE(fn):
        md5 = FORMAT(None, "~(~{~2,'0X~}~)", COERCE(`SB-MD5:MD5SUM-FILE`(fn),
                                                   QUOTE(LIST)))
        cache_fn = MAKE_PATHNAME(DIRECTORY=`'(:absolute "tmp")`,
                                 NAME=md5,
                                 TYPE="fasl")
        if cache:
            if PROBE_FILE(cache_fn):
                LOAD(cache_fn)
            else:
                COMPILE_FILE(fn, OUTPUT_FILE=cache_fn)
